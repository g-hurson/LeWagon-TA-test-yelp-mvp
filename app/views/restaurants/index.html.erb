<h1>Index Restaurants</h1>
<br>
<div>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant.name, restaurant_path(restaurant) %>
        <%= restaurant.address %> |
        <%= restaurant.phone_number %> |
        <%= restaurant.category %>
      </li>
    <% end %>
  </ul>
</div>
<div>
  <%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>
</div>
