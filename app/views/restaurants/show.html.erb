<h1><%= @restaurant.name %></h1>
<br>
<div>
  <%= @restaurant.address %> |
  <%= @restaurant.phone_number %> |
  <%= @restaurant.category %>
</div>
<br>
<div>
  <h2>Reviews</h2>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.content %> || <%= review.rating %>
      </li>
    <% end %>
  </ul>
</div>
<br>
<div>
  <h2>New review</h2>
  <div class="w-25">
    <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
